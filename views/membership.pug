extends layout

block content
  h1= title
  p Welcome to #{title}
  form(method='POST', action='/membership')
    div
      label(for='firstName') First Name:
        input#firstName(type="text" placeholder="First Name" name="firstName")
    div
      label(for='surName') Surname:
        input#surName(type="text" placeholder="Surname" name="surName")
    div
        label(for='email_first') Email:
            input#email_first(type="email" placeholder="Email" name="email_first")
    div
        label(for='email_second') Repeat Email Address:
            input#email_second(type="email" placeholder="Repeat email" name="email_second")
    div
        label(for='password_first') Password:
            input#password_first(type="password" placeholder="Enter your password" name="password_first")
    div
        label(for='password_second') Repeat Password:
            input#password_second(type="password" placeholder="Repeat password" name="password_second")
    div
      label(for='address') Address:
        input#address(type="text" placeholder="Address" name="address")
    div
      label(for='postalCode') Postal Code:
        input#postalCode(type="text" placeholder="Postal Code" name="postalCode")
    div
      label(for='city') City:
        input#city(type="text" placeholder="City" name="city")
    div
      label(for='phone') Phone:
        input#phone(type="text" placeholder="Phone" name="phone")
    div
      label(for='country') Country:
        input#country(type="text" placeholder="Country" name="country")
    button(type='submit') Next Step
